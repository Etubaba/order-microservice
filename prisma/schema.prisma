// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model order {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  price Int
  phone String
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  password String
  phone    String
}
